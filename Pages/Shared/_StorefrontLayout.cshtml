        <div class="container">
            <!-- breadcrumb -->
            <nav class="flex mt-2 mb-6" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse" itemscope
                    itemtype="https://schema.org/BreadcrumbList">
