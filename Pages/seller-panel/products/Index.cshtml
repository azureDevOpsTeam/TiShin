@page
@model TiShinShop.Pages.SellerPanel.Products.IndexModel
@{
    Layout = "_SellerPanelLayout";
    ViewData["Title"] = "مدیریت محصولات";
}

<div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between">
    <div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">فهرست محصولات</h2>
        <p class="text-gray-600 dark:text-gray-400">مدیریت و ویرایش محصولات ثبت‌شده</p>
    </div>
    <div class="mt-4 md:mt-0">
        <a asp-page="Create" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-500 shadow-sm dark:bg-primary-500 dark:hover:bg-primary-600">
            افزودن محصول
        </a>
    </div>
</div>

<div class="bg-white py-6 space-y-4 dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 overflow-hidden border border-gray-200 dark:border-gray-700">
    <div class="px-6 border-b border-gray-200 flex-wrap pb-2 dark:border-gray-700 flex items-center justify-between">
        <h3 class="font-bold text-lg mb-4 relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg">
            لیست محصولات
        </h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-start">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">شناسه</th>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">عنوان</th>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">کد</th>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">قیمت پایه</th>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">موجودی</th>
                    <th class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300">بازدید</th>
                    <th class="px-4 py-3"></th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="px-4 py-3 text-sm">@item.Id</td>
                        <td class="px-4 py-3 text-sm">@item.Title</td>
                        <td class="px-4 py-3 text-sm">@item.Code</td>
                        <td class="px-4 py-3 text-sm">@item.BasePrice.ToString("N0") تومان</td>
                        <td class="px-4 py-3 text-sm">@item.Quantity</td>
                        <td class="px-4 py-3 text-sm">@item.Visit</td>
                        <td class="px-4 py-3 text-sm text-end">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:underline">ویرایش</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>