@page
@model TiShinShop.Pages.SellerPanel.Coupons.CreateModel
@{
    Layout = "~/Pages/Shared/_SellerPanelLayout.cshtml";
    ViewData["Title"] = "ایجاد کوپن تخفیف";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold">ایجاد کوپن تخفیف</h2>
        <a asp-page="./Index" class="text-sm text-primary">بازگشت به لیست</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-3 rounded bg-red-100 text-red-800">@Model.ErrorMessage</div>
    }

    <form method="post" class="space-y-4">
        <div>
            <label class="block text-sm font-medium mb-1">کد کوپن</label>
            <input asp-for="Input.Code" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="Input.Code" class="text-xs text-red-500"></span>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-1">نوع تخفیف</label>
                <select asp-for="Input.Type" class="w-full px-4 py-2 border rounded">
                    <option value="percentage">درصدی</option>
                    <option value="fixed">مبلغ ثابت</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">مقدار</label>
                <input asp-for="Input.Value" type="number" step="0.01" class="w-full px-4 py-2 border rounded" />
                <span class="text-xs text-gray-500">برای درصد واحد «درصد»، برای مبلغ واحد «تومان»</span>
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-1">سقف تخفیف (اختیاری)</label>
                <input asp-for="Input.MaxAmount" type="number" step="0.01" class="w-full px-4 py-2 border rounded" />
            </div>
            <div class="flex items-center gap-4">
                <div>
                    <label class="block text-sm font-medium mb-1">فقط یک بار</label>
                    <input asp-for="Input.IsSingleUse" type="checkbox" class="size-4" />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">فعال</label>
                    <input asp-for="Input.IsActive" type="checkbox" class="size-4" />
                </div>
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-1">تاریخ شروع</label>
                <input asp-for="Input.StartDate" type="datetime-local" class="w-full px-4 py-2 border rounded" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">تاریخ پایان</label>
                <input asp-for="Input.EndDate" type="datetime-local" class="w-full px-4 py-2 border rounded" />
            </div>
        </div>

        <div>
            <button type="submit" class="px-4 py-2 rounded-lg bg-primary text-white">ثبت کوپن</button>
        </div>
    </form>
</div>