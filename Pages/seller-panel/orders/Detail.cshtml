@page "{id}"
@model TiShinShop.Pages.SellerPanel.Orders.DetailModel
@using TiShinShop.Extenssions
@using System.Linq
@{
    Layout = "~/Pages/Shared/_SellerPanelLayout.cshtml";
    ViewData["Title"] = "جزئیات سفارش";
}
<main class="flex-1 overflow-y-auto p-6 bg-gray-50 dark:bg-gray-900">
    <!-- header page -->
    <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">جزئیات سفارش #@Model.Order?.Id</h2>
            <div class="flex flex-wrap items-center mt-2 space-x-3">
                <p class="text-gray-600 mb-2 dark:text-gray-400">تاریخ ثبت سفارش: @Model.Order?.CreatedAt.ToString("yyyy/MM/dd - HH:mm")</p>
                <span class="mx-3 text-gray-400 mb-2">|</span>
                @if (Model.Order != null)
                {
                    <span class="px-2 mb-2 py-1 inline-flex text-xs leading-5 rounded-full @Model.Order.Status.GetBadgeClass()">@Model.Order.Status.GetDisplayName()</span>
                }
            </div>
        </div>
        <div class="mt-4 md:mt-0 flex space-x-2">
            <a asp-page="./Index" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 border border-gray-300 dark:border-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 me-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                </svg>
                بازگشت
            </a>
            <button class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-700 shadow-sm dark:bg-primary-500 dark:hover:bg-primary-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                چاپ فاکتور
            </button>
        </div>
    </div>

    <!-- Order details sections -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left column (Customer & Shipping) -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Customer info -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-bold text-lg mb-4 relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg">اطلاعات مشتری</h3>
                    <button class="text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                        </svg>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">@((Model.Order?.User?.FirstName ?? "") + " " + (Model.Order?.User?.LastName ?? ""))</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">@Model.Order?.User?.Email</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">@Model.Order?.User?.PhoneNumber</span>
                    </div>
                </div>
            </div>

            <!-- Shipping info -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-bold text-lg mb-4 relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg">اطلاعات ارسال</h3>
                    <button class="text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                        </svg>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                        </svg>
                        <div>
                            <p class="text-gray-700 dark:text-gray-300">@Model.Order?.ShippingAddress?.City، @Model.Order?.ShippingAddress?.Street، @Model.Order?.ShippingAddress?.FullAddress</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">کد پستی: @Model.Order?.ShippingAddress?.PostalCode</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                            <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1v-1a1 1 0 011-1h2a1 1 0 011 1v1a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H19a1 1 0 001-1V5a1 1 0 00-1-1H3z" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">پست پیشتاز - تحویل درب منزل</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400 me-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">کد رهگیری: @Model.Order?.TrackingCode</span>
                    </div>
                </div>
            </div>

            <!-- Order notes -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg mb-6">یادداشت سفارش</h3>
                <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
                    <p class="text-yellow-700 dark:text-yellow-300 text-sm">لطفاً بسته‌بندی محصولات را با دقت انجام دهید و از ارسال محصولات شکسته خودداری کنید.</p>
                </div>
            </div>
        </div>

        <!-- Right column (Order items & Summary) -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Order items -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg mb-6">محصولات سفارش</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th scope="col" class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">محصول</th>
                            <th scope="col" class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">قیمت</th>
                            <th scope="col" class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">تعداد</th>
                            <th scope="col" class="px-4 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">جمع</th>
                        </tr>
                        </thead>
                        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @if (Model.OrderItems?.Any() == true)
                        {
                            @foreach (var item in Model.OrderItems)
                            {
                                var img = !string.IsNullOrWhiteSpace(item.Product?.FirstImage)
                                    ? item.Product.FirstImage
                                    : item.Product?.Images?.FirstOrDefault()?.ImageUrl ?? "/images/logo.png";
                                <tr>
                                    <td class="px-4 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-16 w-16">
                                                <img class="h-16 w-16 rounded-lg object-cover" src="@img" alt="@item.Product?.Title">
                                            </div>
                                            <div class="ms-4">
                                                <div class="text-sm font-medium text-gray-900 dark:text-white">@item.Product?.Title</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">کد محصول: @item.Product?.Code</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                    رنگ: @item.ProductColor?.Color?.Value | سایز: @item.ProductSize?.Size?.Value | جنس: @item.ProductMaterial?.Material?.Name
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@item.UnitPrice.ToString("N0") تومان</td>
                                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@item.Quantity</td>
                                    <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">@( (item.UnitPrice * item.Quantity).ToString("N0") ) تومان</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="px-4 py-4 text-center text-sm text-gray-500 dark:text-gray-400">هیچ آیتمی برای این سفارش ثبت نشده است.</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Order summary -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg mb-6">خلاصه سفارش</h3>
                <div class="space-y-3">
                    @if (Model.Order != null)
                    {
                        var couponDiscount = Model.Order.Coupon?.CalculateDiscount(Model.Order.TotalPrice) ?? 0m;
                        var directDiscount = Model.Order.DiscountAmount ?? 0m;
                        var totalDiscount = couponDiscount + directDiscount;
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">مبلغ کالاها</span>
                            <span class="text-gray-900 dark:text-white">@Model.Order.TotalPrice.ToString("N0") تومان</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">تخفیف</span>
                            <span class="text-green-600 dark:text-green-400">-@totalDiscount.ToString("N0") تومان</span>
                        </div>
                        <div class="flex justify بین">
                            <span class="text-gray-600 dark:text-gray-400">هزینه ارسال</span>
                            <span class="text-gray-900 dark:text-white">0 تومان</span>
                        </div>
                        <div class="border-t border-gray-200 dark:border-gray-700 pt-3 mt-3 flex justify-between">
                            <span class="font-bold text-gray-900 dark:text-white">مبلغ قابل پرداخت</span>
                            <span class="font-bold text-primary-600 dark:text-primary-400">@Model.Order.FinalPrice.ToString("N0") تومان</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Order timeline -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg mb-6">وضعیت سفارش</h3>
                <div class="space-y-4">
                    @if (Model.History != null && Model.History.Any())
                    {
                        foreach (var h in Model.History.OrderBy(x => x.ChangedAt))
                        {
                            var s = h.Status.ToString();
                            var badgeColor = s switch
                            {
                                "Pending" => "bg-blue-500",
                                "Processing" => "bg-yellow-500",
                                "Shipped" => "bg-purple-500",
                                "Delivered" => "bg-green-500",
                                "Canceled" => "bg-red-500",
                                _ => "bg-gray-500"
                            };
                            <div class="flex items-start">
                                <div class="flex-shrink-0 mt-0.5">
                                    <div class="flex items-center justify-center h-6 w-6 rounded-full @badgeColor">
                                        <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ms-3 pt-0.5">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">@s</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@h.ChangedAt.ToString("yyyy/MM/dd - HH:mm")</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="flex items-start">
                            <div class="flex-shrink-0 mt-0.5">
                                <div class="flex items-center justify-center h-6 w-6 rounded-full bg-gray-500">
                                    <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                            </div>
                            <div class="ms-3 pt-0.5">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">بدون سابقه وضعیت</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order actions -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 p-6 border border-gray-200 dark:border-gray-700">
                <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg mb-6">عملیات سفارش</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <button class="flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400 hover:bg-yellow-200 dark:hover:bg-yellow-800/50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        ویرایش سفارش
                    </button>
                    <button class="flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-400 hover:bg-red-200 dark:hover:bg-red-800/50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        لغو سفارش
                    </button>
                    <button class="flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-400 hover:bg-blue-200 dark:hover:bg-blue-800/50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        تمدید مهلت ارسال
                    </button>
                    <button class="flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-400 hover:bg-green-200 dark:hover:bg-green-800/50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                        </svg>
                        ارسال مجدد
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>