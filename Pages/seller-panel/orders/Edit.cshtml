@page "{id}"
@model TiShinShop.Pages.SellerPanel.Orders.EditModel
@{
    Layout = "~/Pages/Shared/_SellerPanelLayout.cshtml";
    ViewData["Title"] = "ویرایش سفارش";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold">ویرایش سفارش @Model.Input.Id</h2>
        <a asp-page="./Index" class="text-sm text-primary">بازگشت به لیست</a>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-4">
        <form method="post" class="space-y-4">
            <div class="grid md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm mb-1">وضعیت سفارش</label>
                    <select asp-for="Input.Status" class="form-select">
                        @foreach (var s in Model.StatusOptions)
                        {
                            <option value="@s.Value">@s.Text</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm mb-1">کد رهگیری</label>
                    <input asp-for="Input.TrackingCode" class="form-input" />
                </div>
            </div>

            <div class="grid md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm mb-1">نام کامل گیرنده</label>
                    <input asp-for="Input.FullName" class="form-input" />
                </div>
                <div>
                    <label class="block text-sm mb-1">شماره تماس</label>
                    <input asp-for="Input.Phone" class="form-input" />
                </div>
                <div>
                    <label class="block text-sm mb-1">شهر</label>
                    <input asp-for="Input.City" class="form-input" />
                </div>
                <div>
                    <label class="block text-sm mb-1">خیابان</label>
                    <input asp-for="Input.Street" class="form-input" />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm mb-1">آدرس کامل</label>
                    <textarea asp-for="Input.FullAddress" rows="3" class="form-textarea"></textarea>
                </div>
                <div>
                    <label class="block text-sm mb-1">کد پستی</label>
                    <input asp-for="Input.PostalCode" class="form-input" />
                </div>
            </div>

            <div>
                <label class="block text-sm mb-1">یادداشت تغییر وضعیت (اختیاری)</label>
                <input asp-for="Input.Note" class="form-input" />
            </div>

            <div class="flex items-center gap-3">
                <button type="submit" class="btn bg-primary text-white">ذخیره تغییرات</button>
                <a asp-page="./Index" class="btn bg-gray-100 dark:bg-gray-700">انصراف</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}