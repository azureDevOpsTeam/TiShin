@page
@model TiShinShop.Pages.SellerPanel.Reports.CustomersModel
@{
    Layout = "_SellerPanelLayout";
}

<div class="flex h-screen overflow-hidden bg-gray-100 dark:bg-gray-900">
    <div class="flex flex-1 flex-col">
        <!--Page content-->
        <main class="flex-1 overflow-y-auto p-6 bg-gray-50 dark:bg-gray-900">
            <!--Page header-->
            <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">گزارش مشتریان</h2>
                    <p class="text-gray-600 dark:text-gray-400">تحلیل رفتار و عملکرد مشتریان</p>
                </div>
                <div class="mt-4 md:mt-0 flex items-center space-x-3">
                    <a asp-page-handler="Export" class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-500 shadow-sm dark:bg-primary-500 dark:hover:bg-primary-600">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 me-2" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2.25a.75.75 0 01.75.75v16.19l2.47-2.47a.75.75 0 111.06 1.06l-3.75 3.75a.75.75 0 01-1.06 0l-3.75-3.75a.75.75 0 111.06-1.06l2.47 2.47V3a.75.75 0 01.75-.75zM3 5.25a.75.75 0 01.75-.75h16.5a.75.75 0 010 1.5H3.75A.75.75 0 013 5.25z"></path>
                        </svg>
                        خروجی Excel
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <form method="get" class="bg-white dark:bg-gray-800 rounded-xl shadow-md mb-6 p-6 border border-gray-200 dark:border-gray-700">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">نوع مشتری</label>
                        <select name="CustomerType" class="w-full px-3 py-2 border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600">
                            @if (Model.CustomerType == "all" || string.IsNullOrEmpty(Model.CustomerType)) {<option value="all" selected>همه مشتریان</option>} else {<option value="all">همه مشتریان</option>}
                            @if (Model.CustomerType == "new") {<option value="new" selected>مشتریان جدید</option>} else {<option value="new">مشتریان جدید</option>}
                            @if (Model.CustomerType == "loyal") {<option value="loyal" selected>مشتریان وفادار</option>} else {<option value="loyal">مشتریان وفادار</option>}
                            @if (Model.CustomerType == "inactive") {<option value="inactive" selected>مشتریان غیرفعال</option>} else {<option value="inactive">مشتریان غیرفعال</option>}
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">شهر</label>
                        <select name="City" class="w-full px-3 py-2 border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600">
                            @if (string.IsNullOrEmpty(Model.City)) {<option value="" selected>همه شهرها</option>} else {<option value="">همه شهرها</option>}
                            @foreach (var city in Model.AvailableCities)
                            {
                                if (Model.City == city) {<option value="@city" selected>@city</option>} else {<option value="@city">@city</option>}
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">تعداد خرید</label>
                        <select name="MinPurchases" class="w-full px-3 py-2 border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600">
                            @if (!Model.MinPurchases.HasValue || Model.MinPurchases == 0) {<option value="" selected>همه</option>} else {<option value="">همه</option>}
                            @if (Model.MinPurchases == 1) {<option value="1" selected>1+</option>} else {<option value="1">1+</option>}
                            @if (Model.MinPurchases == 3) {<option value="3" selected>3+</option>} else {<option value="3">3+</option>}
                            @if (Model.MinPurchases == 5) {<option value="5" selected>5+</option>} else {<option value="5">5+</option>}
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">جستجو</label>
                        <input type="text" name="Search" value="@Model.Search" placeholder="جستجوی مشتری..." class="w-full px-3 py-2 border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600" />
                    </div>
                </div>
                <div class="mt-4 grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">اندازه صفحه</label>
                        <select name="PageSize" class="w-full px-3 py-2 border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600">
                            @if (Model.PageSize == 10) {<option value="10" selected>10</option>} else {<option value="10">10</option>}
                            @if (Model.PageSize == 25) {<option value="25" selected>25</option>} else {<option value="25">25</option>}
                            @if (Model.PageSize == 50) {<option value="50" selected>50</option>} else {<option value="50">50</option>}
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">&nbsp;</label>
                        <button type="submit" class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-500">اعمال فیلتر</button>
                    </div>
                </div>
            </form>

            <!--General statistics-->
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6 mb-6">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500 dark:text-gray-400 text-sm">کل مشتریان</p>
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Stats.TotalCustomers.ToString("N0")</p>
                        </div>
                        <div class="p-3 rounded-xl bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500 dark:text-gray-400 text-sm">میانگین خرید</p>
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Stats.AveragePurchases.ToString("0.0")</p>
                        </div>
                        <div class="p-3 rounded-xl bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500 dark:text-gray-400 text-sm">مشتریان فعال</p>
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Stats.ActiveCustomers.ToString("N0")</p>
                        </div>
                        <div class="p-3 rounded-xl bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500 dark:text-gray-400 text-sm">نرخ نگهداری</p>
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Stats.RetentionRate.ToString("0%")</p>
                        </div>
                        <div class="p-3 rounded-xl bg-pink-100 dark:bg-pink-900/30 text-pink-600 dark:text-pink-400">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts -->
            <div class="grid grid-cols-1 xl:grid-cols-2 gap-6 mb-6">
                <!--Geographical distribution-->
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <h3 class="text-lg font-semibold mb-4">توزیع جغرافیایی مشتریان</h3>
                    <div class="h-80">
                        <canvas id="geoDistributionChart"></canvas>
                    </div>
                </div>

                <!--Registration process-->
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
                    <h3 class="text-lg font-semibold mb-4">روند ثبت‌نام ماهانه</h3>
                    <div class="h-80">
                        <canvas id="registrationTrendChart"></canvas>
                    </div>
                </div>
            </div>

            <!--Customer table-->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-200 dark:border-gray-700">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
                    <h3 class="text-lg font-semibold">لیست مشتریان</h3>
                    <div class="flex items-center space-x-3">
                        <div class="relative">
                            <input type="text" value="@Model.Search" name="Search" form="" placeholder="جستجوی مشتری..." class="px-4 py-2 border rounded-lg w-64 focus:ring-primary focus:border-primary dark:bg-gray-700">
                        </div>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">نام</th>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ایمیل</th>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">شماره تماس</th>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">تعداد خریدها</th>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">مجموع خرید</th>
                            <th class="px-6 py-3 text-start text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">آخرین خرید</th>
                        </tr>
                        </thead>
                        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var c in Model.Customers)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <img class="h-8 w-8 rounded-full" src="~/images/user/user.jpg" alt="پروفایل">
                                        <div class="ms-3">
                                            <p class="text-sm font-medium text-gray-900 dark:text-white">@c.FullName</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@c.City</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@c.Email</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@c.Phone</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@c.PurchaseCount</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@c.TotalSpent.ToString("N0") تومان</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@c.LastPurchase.ToString("yyyy/MM/dd")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="bg-gray-50 dark:bg-gray-700 px-6 py-4 border-t border-gray-200 dark:border-gray-600">
                    <nav class="flex items-center justify-between">
                        <div class="flex-1 flex items-center space-x-4">
                            <span class="text-sm text-gray-700 dark:text-gray-300">
                                نمایش @Model.PageStart تا @Model.PageEnd از @Model.TotalFilteredCustomers مشتری
                            </span>
                            <form method="get">
                                <select name="PageSize" class="text-sm border rounded-lg focus:ring-primary focus:border-primary dark:bg-gray-600" onchange="this.form.submit()">
                                    @if (Model.PageSize == 10) {<option value="10" selected>10</option>} else {<option value="10">10</option>}
                                    @if (Model.PageSize == 25) {<option value="25" selected>25</option>} else {<option value="25">25</option>}
                                    @if (Model.PageSize == 50) {<option value="50" selected>50</option>} else {<option value="50">50</option>}
                                </select>
                                <input type="hidden" name="CustomerType" value="@Model.CustomerType" />
                                <input type="hidden" name="City" value="@Model.City" />
                                <input type="hidden" name="MinPurchases" value="@Model.MinPurchases" />
                                <input type="hidden" name="Search" value="@Model.Search" />
                            </form>
                        </div>
                        <div class="flex space-x-2">
                            <a class="px-3 py-1 rounded-lg bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300" href="?PageNumber=@(Model.PageNumber>1?Model.PageNumber-1:1)&PageSize=@Model.PageSize&CustomerType=@Model.CustomerType&City=@Model.City&MinPurchases=@Model.MinPurchases&Search=@Model.Search">قبلی</a>
                            <span class="px-3 py-1 rounded-lg bg-primary-600 text-white">@Model.PageNumber</span>
                            <a class="px-3 py-1 rounded-lg bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300" href="?PageNumber=@(Model.PageNumber<Model.TotalPages?Model.PageNumber+1:Model.TotalPages)&PageSize=@Model.PageSize&CustomerType=@Model.CustomerType&City=@Model.City&MinPurchases=@Model.MinPurchases&Search=@Model.Search">بعدی</a>
                        </div>
                    </nav>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script src="~/js/dependencies/app.js"></script>
    <script src="~/js/plugin/chart-js/chart.js"></script>
    <script>
        Chart.defaults.font.family = 'payda, sans-serif';
        Chart.defaults.color = '#6B7280';

        const geoCtx = document.getElementById('geoDistributionChart').getContext('2d');
        new Chart(geoCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.GeoLabels)),
                datasets: [{
                    label: 'تعداد مشتریان',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.GeoData)),
                    backgroundColor: '#3B82F6'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
            }
        });

        const regCtx = document.getElementById('registrationTrendChart').getContext('2d');
        new Chart(regCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RegistrationLabels)),
                datasets: [{
                    label: 'ثبت‌نام ماهانه',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RegistrationData)),
                    borderColor: '#10B981',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    </script>
}