@page "{id:int}"
@model TiShinShop.Pages.SellerPanel.Settings.Colors.EditModel
@{
    Layout = "_SellerPanelLayout";
    ViewData["Title"] = "ویرایش رنگ";
}

<div class="bg-white py-6 dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-700 overflow-hidden border border-gray-200 dark:border-gray-700">
    <div class="px-6 border-b border-gray-200 dark:border-gray-700 mb-6">
        <h3 class="font-bold text-lg relative pb-4 before:absolute before:start-0 before:bottom-0 before:size-2 before:rounded-full before:bg-primary after:absolute after:w-40 after:h-2 after:bottom-0 after:start-4 after:bg-primary after:rounded-lg">ویرایش رنگ</h3>
    </div>
    <form method="post" class="px-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">نام رنگ</label>
                <input asp-for="Input.Value" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                <span asp-validation-for="Input.Value" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">انتخاب رنگ (Hex)</label>
                <div class="flex items-center space-x-3 rtl:space-x-reverse">
                    <input type="color" id="colorPicker" class="w-12 h-12 border rounded" value="@Model.Input.HexCode" onchange="updateHex(this.value)" />
                    <input asp-for="Input.HexCode" id="hexInput" class="flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                </div>
                <span asp-validation-for="Input.HexCode" class="text-red-600 text-sm"></span>
            </div>
        </div>
        <div class="flex justify-end space-x-3 rtl:space-x-reverse">
            <a asp-page="Index" class="px-4 py-2 text-sm font-medium rounded-lg border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">انصراف</a>
            <button type="submit" class="px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-700 shadow-sm dark:bg-primary-500 dark:hover:bg-primary-600">ذخیره تغییرات</button>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateHex(val) {
            const hexInput = document.getElementById('hexInput');
            if (hexInput) hexInput.value = val;
        }
    </script>
}