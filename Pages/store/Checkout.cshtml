@page
@model TiShinShop.Pages.Store.CheckoutModel
@{
    Layout = "_StorefrontLayout";
    ViewData["Title"] = "تکمیل سفارش";
}

<section class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">آدرس و پرداخت</h1>
    <form method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium mb-2">نام و نام‌خانوادگی</label>
                <input asp-for="Input.FullName" class="w-full px-4 py-2 border rounded" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">شماره تماس</label>
                <input asp-for="Input.Phone" class="w-full px-4 py-2 border rounded" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">شهر</label>
                <input asp-for="Input.City" class="w-full px-4 py-2 border rounded" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">خیابان</label>
                <input asp-for="Input.Street" class="w-full px-4 py-2 border rounded" />
            </div>
            <div class="md:col-span-2">
                <label class="block text-sm font-medium mb-2">آدرس کامل</label>
                <textarea asp-for="Input.FullAddress" class="w-full px-4 py-2 border rounded"></textarea>
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">کدپستی</label>
                <input asp-for="Input.PostalCode" class="w-full px-4 py-2 border rounded" />
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="submit" class="px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-700 shadow-sm">ادامه به پرداخت</button>
        </div>
    </form>
</section>