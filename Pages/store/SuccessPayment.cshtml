@page "{id:int}"
@model TiShinShop.Pages.Store.SuccessPaymentModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "پرداخت موفق";
}

<section class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">پرداخت موفق</h1>
    <p>سفارش شما با کد پیگیری <strong>@Model.TrackingCode</strong> با موفقیت پرداخت شد.</p>
    <a asp-page="/Index" class="mt-4 inline-block px-4 py-2 rounded bg-primary-600 text-white">بازگشت به صفحه اصلی</a>
</section>