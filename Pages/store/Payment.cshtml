@page "{id:int}"
@model TiShinShop.Pages.Store.PaymentModel
@{
    Layout = "_StorefrontLayout";
    ViewData["Title"] = "پرداخت";
}

<section class="py-6">
    <div class="container">
        <!-- stepper -->
        <div class="grid grid-cols-4 gap-4 place-items-center">
            <div class="sm:col-span-1 col-span-4 w-full">
                <a asp-page="/store/Cart" class="flex items-center justify-center p-3 border border-gray-300 rounded-lg">
                    <span class="font-bold">سبد خرید</span>
                </a>
            </div>
            <div class="sm:col-span-1 col-span-4 w-full">
                <a asp-page="/store/Checkout" class="flex items-center justify-center p-3 border border-gray-300 rounded-lg">
                    <span class="font-bold">نشانی و ارسال</span>
                </a>
            </div>
            <div class="sm:col-span-1 col-span-4 w-full">
                <div class="flex items-center justify-center p-3 border bg-primary text-white rounded-lg">
                    <span class="font-bold">پرداخت</span>
                </div>
            </div>
            <div class="sm:col-span-1 col-span-4 w-full">
                <div class="flex items-center justify-center p-3 border border-gray-300 rounded-lg">
                    <span class="font-bold">اتمام</span>
                </div>
            </div>
        </div>

        <div class="grid gap-4 grid-cols-4 my-6">
            <!-- payment method and coupon -->
            <div class="xl:col-span-3 col-span-4 w-full">
                <div class="dark:bg-gray-800 dark:text-white bg-white rounded-lg drop-shadow-lg border-gray-300 border-1 p-4">
                    <h3 class="font-bold mb-4">روش پرداخت</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <button type="button" class="p-3 border rounded-lg">اعتبار دیجیتال</button>
                        <button type="button" class="p-3 border rounded-lg">آنلاین</button>
                        <button type="button" class="p-3 border rounded-lg">کیف پول</button>
                        <button type="button" class="p-3 border rounded-lg">کارت اعتباری</button>
                    </div>

                    <div class="mt-6">
                        <h3 class="font-bold mb-2">کد تخفیف</h3>
                        @if (!string.IsNullOrWhiteSpace(Model.Message))
                        {
                            <div class="mb-3 p-3 rounded @(Model.IsError ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800")">@Model.Message</div>
                        }
                        <form method="post" asp-page-handler="ApplyCoupon" class="space-y-3">
                            <div class="flex">
                                <input name="code" type="text" value="@Model.AppliedCode" placeholder="کد تخفیف خود را وارد کنید" class="flex-1 dark:placeholder-gray-400 border border-gray-300 rounded-s-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-primary">
                                <button type="submit" class="bg-secondary hover:bg-secondary-400 dark:bg-gray-600 text-white px-4 py-2 rounded-e-md transition-colors">اعمال کد</button>
                            </div>
                        </form>
                        <div class="mt-4">
                            <label class="block text-sm text-gray-700 dark:text-gray-200 mb-1 font-bold">کارت هدیه</label>
                            <div class="flex">
                                <input type="text" placeholder="کد کارت هدیه خود را وارد کنید" class="flex-1 dark:placeholder-gray-400 border border-gray-300 rounded-s-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-primary">
                                <button class="bg-secondary hover:bg-secondary-400 dark:bg-gray-600 text-white px-4 py-2 rounded-e-md transition-colors">اضافه کردن</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- calculate -->
            <div class="xl:col-span-1 col-span-4 w-full">
                <div class="dark:bg-gray-800 sticky top-0 dark:text-white bg-white rounded-lg drop-shadow-lg border-gray-300 border-1 p-4">
                    @if (Model.Order == null)
                    {
                        <div>سفارش یافت نشد.</div>
                    }
                    else
                    {
                        <ul class="space-y-5">
                            <li class="flex justify-between item-center dark:text-white">
                                <h6 class="font-bold">قیمت کالاها</h6>
                                <p>@Model.Order.TotalPrice.ToString("N0") تومان</p>
                            </li>
                            <li class="flex justify-between item-center dark:text-white">
                                <h6 class="font-bold">تخفیف کالاها</h6>
                                <p class="text-primary font-bold">@Model.TotalDiscount.ToString("N0") تومان</p>
                            </li>
                            <li class="flex justify-between item-center dark:text-white">
                                <h6 class="font-bold">مجموع</h6>
                                <p>@Model.FinalPrice.ToString("N0") تومان</p>
                            </li>
                            <li>
                                <form method="post">
                                    <button type="submit" class="p-2 bg-primary-grad w-full block text-center rounded-lg text-white">تسویه حساب</button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</section>